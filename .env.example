# Environment Configuration
REDIS_URL=redis://127.0.0.1:6379
API_HOST=0.0.0.0
API_PORT=8080

# Iroh P2P Configuration
# Format: NodeId@ip:port (comma-separated)
BOOTSTRAP_PEERS=

# MQTT Configuration
MQTT_ENABLED=true
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=cyberfly-node

# Relay Configuration
RELAY_ENABLED=true
RELAY_HTTP_BIND=0.0.0.0:3340
RELAY_STUN_PORT=3478
RELAY_PUBLIC_HOST=  # Your public IP or domain

# Kadena Blockchain Configuration (REQUIRED for node registration)
# Your Kadena account (k: format)
KADENA_ACCOUNT=k:your-account-name

# Your Ed25519 private key (64 hex characters)
# This key is used for:
# 1. Kadena smart contract interactions
# 2. Iroh node identity
# 3. libp2p peer ID generation
KADENA_SECRET_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Network: mainnet01 or testnet04
KADENA_NETWORK=testnet04

# Chain ID (default: 1)
KADENA_CHAIN_ID=1

# API Host (auto-generated if not provided)
# KADENA_API_HOST=https://api.chainweb.com/chainweb/0.0/testnet04/chain/1/pact

# NOTE: KADENA_PUBLIC_KEY is NO LONGER REQUIRED
# The public key is automatically derived from KADENA_SECRET_KEY

# Logging
RUST_LOG=info
